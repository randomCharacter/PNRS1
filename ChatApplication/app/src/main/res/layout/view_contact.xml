<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/first_letter"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:shadowColor="@color/colorPrimary"
        android:textColor="@color/colorPrimaryText"
        android:textSize="50sp"
        android:gravity="center"
        android:text="@string/sample_letter"/>


    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/sample_name"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/first_letter"
        app:layout_constraintRight_toLeftOf="@id/button_message"/>

    <ImageView
        android:id="@+id/button_message"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_send"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/open_conversation"/>

</android.support.constraint.ConstraintLayout>
